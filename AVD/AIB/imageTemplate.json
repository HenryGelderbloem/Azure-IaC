{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "2022.03.01.1238",
    "parameters": {
        "imageTemplateName": {
            "type": "string"
        },
        "userManagedIdentityResourceGroup": {
            "type": "string"
        },
        "userManagedIdentityName": {
            "type": "string"
        },
        "galleryImageResourceGroup": {
            "type": "string"
        },
        "galleryImageName": {
            "type": "string"
        },
        "imageDefName": {
            "type": "string"
        },
        "replicationRegions": {
            "type": "string"
        }
    },
    
    "variables": {
        "imageTemplateName": "win10AvdmM65ImageTemplate001",
        "api-version": "2020-02-14",
        "location": "[resourceGroup().location]",
        "subscriptionId": "[subscription().subscriptionId]",
        "userManagedIdentityResourceGroup" : "rg-avd-dev-001",
        "userManagedIdentityName" : "rg-avd-dev-001",
        "galleryImageResourceGroup": "rg-avdcg-production-uksouth-001",
        "userManagedIdentityId": "[concat ('subscriptions/', variables('subscriptionId'), '/resourceGroups/', variables('userManagedIdentityResourceGroup'), '/providers/Microsoft.ManagedIdentity/userAssignedIdentities/', variables('userManagedIdentityName'))]"
    },


    "resources": [
      {
        "name": "[variables('imageTemplateName')]",
        "type": "Microsoft.VirtualMachineImages/imageTemplates",
        "apiVersion": "[variables('api-version')]",
        "location": "[variables('location')]",
        "dependsOn": [],
        "tags": {},
            "identity": {
                "type": "UserAssigned",
                        "userAssignedIdentities": {
                        "[variables('userManagedIdentityId')]": {}
                            
                    }
                    },
        
        "properties": {
            "buildTimeoutInMinutes" : 120,

            "vmProfile": 
                    {
                    "vmSize": "Standard_D2s_v5",
                    "osDiskSizeGB": 127
                    },
        
            "source": {
                "type": "PlatformImage",
                    "publisher": "MicrosoftWindowsDesktop",
                    "offer": "office-365",
                    "sku": "win10-21h2-avd-m365-g2",
                    "version": "latest"
            },
            "customize": [

                    {
                        "type": "PowerShell",
                        "name": "installFsLogix",
                        "runElevated": true,
                        "runAsSystem": true,
                        "scriptUri": "https://raw.githubusercontent.com/HenryGelderbloem/Azure-IaC/main/AVD/AIB/installFsLogix.ps1"
                    },

                    {
                        "type": "PowerShell",
                        "name": "OptimizeOS",
                        "runElevated": true,
                        "runAsSystem": true,
                        "scriptUri": "https://raw.githubusercontent.com/danielsollondon/azvmimagebuilder/master/solutions/14_Building_Images_WVD/1_Optimize_OS_for_WVD.ps1"
                    },
                    {
                        "type": "WindowsRestart",
                        "restartCheckCommand": "write-host 'restarting post Optimizations'",
                        "restartTimeout": "15m"
                    },
                    {
                        "type": "WindowsUpdate",
                        "searchCriteria": "IsInstalled=0",
                        "filters": [
                            "exclude:$_.Title -like '*Preview*'",
                            "include:$true"
                                    ],
                        "updateLimit": 40
                    }

            ],
            "distribute": 
            [
                {   
                    "type": "SharedImage",
                    "galleryImageId": "/subscriptions/<subscriptionId>/resourceGroups/rg-avdcg-production-uksouth-001/providers/Microsoft.Compute/galleries/cgavdproductionuksouth001/images/def-norwaylow-uksouth-001",
                    "runOutputName": "avdWind10Gen2GoldenImage",
                    "artifactTags": {},
                    "replicationRegions": [
                      "uksouth"

                    ]
                }
            ]
            }
        }

    
    ]
}    